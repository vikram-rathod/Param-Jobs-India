<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeJbStatusActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:id="@+id/toolbarchngejbstatus"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Change Interview Status"
        app:titleTextColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/sp_shedule_iv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/editback"
            android:gravity="left"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:hint="Job Type *" />
        <Button
            android:id="@+id/check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_baseline_check_24"
            android:text="Submit Changes"
            android:background="@drawable/btndesign"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shwlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14dp"
            android:text="Upload Bank Passbook Xerox : " />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadingfile"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="5">


                    <TextView
                        android:id="@+id/t1passxerox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tpassxerox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uploading Bank Passbook Xerox "
                        android:textSize="13dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/u1"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/uppassxerox"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/uploadtoserver"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14dp"
            android:text="Upload Video Recording : " />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadingfile"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="5">


                    <TextView
                        android:id="@+id/t2videorec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tvideorec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uploading Video Recording"
                        android:textSize="13dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/u2"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/upvideorec"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/uploadtoserver"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14dp"
            android:text="Upload Travel Ticket : " />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadingfile"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="5">


                    <TextView
                        android:id="@+id/t3traveltckt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/ttraveltckt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uploading Travel Ticket"
                        android:textSize="13dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/u3"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/uptraveltckt"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/uploadtoserver"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14dp"
            android:text="Upload Salary Proof : " />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadingfile"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="5">


                    <TextView
                        android:id="@+id/t4salaryproof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tsalaryproof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uploading Salary Proof"
                        android:textSize="13dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/u4"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/upsalaryproof"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/uploadtoserver"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14dp"
            android:text="Upload Offer Letter : " />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadingfile"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="5">


                    <TextView
                        android:id="@+id/t5offerletter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tofferletter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uploading Offer Letter"
                        android:textSize="13dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/u5"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/upofferletter"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/uploadtoserver"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</ScrollView>