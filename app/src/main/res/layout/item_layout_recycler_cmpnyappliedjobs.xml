<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/srno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounddesign"
                android:text="SrNo:"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidate Details :"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/lightteal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:layout_weight="1.4"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cndname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Candidate Name"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
<!--            <TextView-->
<!--                android:id="@+id/jobcardno"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Jobcardno"-->
<!--                android:ems="3"-->
<!--                android:ellipsize="end"-->
<!--                android:lines="1"-->
<!--                android:padding="5dp"-->
<!--                android:textColor="@color/black"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Mobile No. : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cndno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Email ID : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndemailid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="EmailId"
                android:ems="3"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Education : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndedu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Education"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Experience : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndexp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Experience"
                android:ems="4"
                android:lines="1"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Details : "
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/lightteal"
                android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Job Title : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndjbtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Job Title"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Company Name : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndgetcmpname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Get Cmp name"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Salary : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndjbsalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Salary"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Job Education : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndjbedu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Job Education"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Interview Date : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cndindate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Interview Date"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Interview Time : "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cndintm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Interview Time"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:padding="5dp"
                    android:text="Interview Status : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cndintstatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Interview Status"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"/>


            <Button
                android:id="@+id/changejbstatustxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Click Here to Change Applied Candidate Interview Status"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btndesign"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>